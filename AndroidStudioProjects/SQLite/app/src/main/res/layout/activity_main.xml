<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/bandInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="band Name" />

    <Button
        android:id="@+id/addButton"
        android:onClick="addToDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="ADD"
        android:layout_below="@+id/bandInput"
        android:layout_toLeftOf="@+id/databaseText"
        android:layout_toStartOf="@+id/databaseText"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/deleteButton"
        android:onClick="deleteFromDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_above="@+id/databaseText"
        android:layout_toRightOf="@+id/databaseText"
        android:layout_toEndOf="@+id/databaseText"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/databaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Bands"
        android:layout_below="@+id/addButton"
        android:layout_centerHorizontal="true" />

    <VideoView
        android:id="@+id/testVideo"
        android:layout_width="wrap_content"
        android:paddingTop="150dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:id="@+id/videoButton"
        android:onClick="startVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="startVideo"
        android:layout_alignTop="@+id/databaseText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>